		bigcore7_thmzone: bigcore7-thmzone {
			polling-delay-passive = <0>;
			polling-delay = <0>;
			thermal-sensors = <&ap_thm0 4>;
		};

		ai0_thmzone: ai0-thmzone {
			polling-delay-passive = <0>;
			polling-delay = <0>;
